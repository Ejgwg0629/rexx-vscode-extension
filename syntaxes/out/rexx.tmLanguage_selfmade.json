{
  "fileTypes": [
    "rex",
    "rxj",
    "rexx",
    "rx"
  ],
  "scopeName": "source.rexx",
  "firstLineMatch": "/\\*.*(?i:REXX)\\b",
  "foldingStartMarker": "(/\\*|\\b(do|select)\\b)",
  "foldingStopMarker": "(\\*/|\\bend\\b)",
  "name": "REXX",
  "patterns": [
    {
      "include": "#core"
    }
  ],
  "repository": {
    "core": {
      "patterns": [
        {
          "include": "#flowtype-keywords"
        }
      ]
    },
    "flowtype-keywords": {
      "patterns": [
        {
          "name": "keyword.control.flow.rexx",
          "match": "\\b(if|else|end)\\b"
        }
      ]
    }
  }
}
